.container
    height 92vh
    width 100vw
    padding 17vh 7vw 13vh 7vw
    box-sizing border-box


.description
    width 100%
    height 50%


.description h1
    margin 0
    font-family soleil, sans-serif
    font-style bold
    line-height 45px
    font-size 1.875rem
    margin-bottom 2vh


.description h1 span.color
    color #F61434
    font-size 1.875rem


.description span
    font-family soleil, sans-serif
    font-style normal
    font-size 1rem
    line-height 18px


.projects
    width 100%
    height 50%
    display flex
    justify-content flex-end
    align-items flex-end


.projects_button
    display flex
    align-items center
    width 50%
    text-decoration none
    cursor pointer


.projects_button span
    font-family soleil, sans-serif
    font-style bold
    font-size 0.875rem
    color white
    margin-left  3%



/* Desktop */

.container__large
    height 92vh
    width 100vw
    padding 17vh 15vw 25vh 15vw
    box-sizing border-box
    display flex



.description__large
    width 50%
    height 100%



.description__large h1
    margin 0
    font-family soleil, sans-serif
    font-style bold
    line-height 75px
    font-size 3.125rem
    margin-bottom 2vh


.description__large h1 span.color
    color #F61434
    line-height 75px
    font-size 3.125rem


.description__large span
    font-family soleil, sans-serif
    font-style normal
    font-size 1.25rem
    line-height 30px


.projects__large
    width 50%
    height 100%
    display flex
    flex-direction column
    justify-content space-between
    padding-left 20%


.projects__large div
    border-left 1px solid white
    height 8%
    width auto
    display flex
    align-items center
    padding-left 5%


.projects__large div span
    font-family soleil, sans-serif
    font-style normal
    font-size 1.125rem
    line-height 18px


.projects__large .projects_button
    display flex
    justify-content unset
    align-items center
    width auto
    text-decoration none
    cursor pointer


.projects__large .projects_button span
    font-family soleil, sans-serif
    font-style bold
    font-size 1.25rem
    color white
    margin-left  3%

