.header
    height 8vh
    width 100vw
    box-sizing border-box
    display flex
    justify-content space-between
    align-items flex-end
    padding 0 7vw


.header .Link
    text-decoration none
    cursor pointer
    color white
    font-family soleil, sans-serif
    font-style normal
    font-size 0.875rem


.categories
    display flex
    justify-content space-between
    width 30vw


/* Tablet */
@media screen and (min-width: 740px) and (max-width: 1100px)
    .categories
        width 15vw
    
    .header .Link
        font-size 1rem
    


/* Desktop */
@media screen and (min-width: 1100px) 
    .categories
        width 10vw
    
    .header .Link
        font-size 1.1rem
    
